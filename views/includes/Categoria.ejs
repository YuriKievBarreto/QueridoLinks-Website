<div  class="exposicao  w-95/100  mx-auto mb-10  p-3 shadow-2xl border-t-2 border-[#05ABED]">
    <h1 class="text-start text-2xl mb-1 font-bold  text-[#05ABED] md:text-4xl lg:text-2xl">PRODUTOS EM DESTAQUE</h1>
    <h1 class="text-end text-lg mb-2 md:text-2xl">Ver todos -></h1>
    <div class="flex justify-around items-center flex-wrap gap-5 md:gap-7 md:mt-5 lg:gap-10 lg:justify-center  ">

        <% qtd = 0; %>
        <% produtosDinamicos.forEach(produto => {%>
            
            <% if(qtd < 6) { %> 
                
                <% if(qtd > 3) { %>
                    
                    <div class="item-destaque hidden sm:hidden md:hidden lg:block">
                        <img src="<%= produto.imagem %>" class=""  alt="">
                        <p class="text-center text-bold text-md font-bold "><%= produto.nome %></p>
                        <% console.log('rodando') %>
                    </div>  
                <% } else { %>

                    <div class="item-destaque">
                        <img src="<%= produto.imagem %>" class=""  alt="">
                        <p class="text-center text-bold text-md font-bold "><%= produto.nome %></p>
                        
                    </div>
                    
                    
                <% } %>
                <% qtd++; 
                    
                %> 
                
            <% } %>
                

        <%}); %>
        
    </div>
</div>