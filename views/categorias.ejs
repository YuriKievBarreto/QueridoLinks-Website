<!DOCTYPE html>
<html lang="en">
    <%- include('includes/HTMLhead') %>   
<body class="poppins-Regular">
    <main class="w-screen m-auto bg-[rgba(255,255,255,0.77)] min-h-80" >
        <%- include('includes/header') %>
        <h1 class="text-3xl text-center mb-10">navegue por categorias: </h1>
        <% categorias.forEach((categoria, indice) => { %>
            <% if(produtosCategorizados[indice].length > 3)  {%>
                
                <div  class="exposicao  w-95/100  mx-auto mb-10 <% if(indice == 0){%> lg:mt-16 <% }%>  p-3 shadow-2xl border-t-2 border-[#05ABED] ">
                    <h1 class="text-start text-2xl mb-1 font-bold  text-[#05ABED] md:text-3xl lg:text-2xl"><%= categoria[1]%></h1>
                    <a href="<%=`/categorias:${categoria[0]}`%>">
                        <h1 class="text-end text-lg mb-2 md:text-2xl lg:text-lg ver-todos">Ver todos -></h1>
                    </a>
                    <div class="flex justify-around items-center flex-wrap gap-5 md:gap-7 md:mt-5 lg:gap-10 lg:justify-center  ">
                        <% qtd = 0; %>
                        
                        
                            
                            <%for(let produto of produtosCategorizados[indice]){%>
                            
                           
                                <% if(qtd < 6) { %>
                
                                    <% if(qtd > 3 ) { %>
                
                                        <div class="item-destaque hover:cursor-pointer hidden sm:hidden md:hidden lg:block">
                                            <img src="<%= produto.imagem %>" class=""  alt="">
                                            <p class="text-center text-bold text-md font-bold   "><%= produto.nome %></p>
                                            <span data-link="<%= produto.linkAfid %>"></span>
                                           
                                        </div>
                                    <% } else { %>
                                        <div class="item-destaque hover:cursor-pointer">
                                            <img src="<%= produto.imagem %>" class=""  alt="">
                                            <p class="text-center text-bold text-sm font-bold "><%= produto.nome %></p>
                                            <span data-link="<%= produto.linkAfid %>"></span>
                
                                        </div>
                
                
                                    <% } %>
                                    <% qtd++;
                
                                    %>
                
                                <% } %>
                
                            <%}; %>
                            
                        
            
                        
            
                    </div>
                </div>    
                
            <% } %>
            
           <% }); %>
    </main>
    
    <script src="/js/links.js"></script>
</body>
</html>



