<!DOCTYPE html>
<html lang="en">
    <%- include('includes/HTMLhead') %>   
<body class=" bg-[rgba(0,0,0,0.2)] bebasNeue ">
    <header class=" w-full h-20 p-2 bg-blue-500 flex items-center justify-around gap-12 px-7  z-10 ">

        <div class="flex items-center gap-4 mr-4">
            <img src="/assets/imgs/logo.png" class="w-15 h-15 inline-block">
            <h1 class="text-4xl inline-block text-white font-bold">QueridoLinks</h1>
        </div>
    
        <form class="flex items-center gap-1  p-1 rounded-sm" >
            <input type="text" name="" id="" placeholder="Buscar em Querido Links" class="w-180 h-11 p-2 bg-white rounded-sm">
            <button class=" w-11 h-11 bg-white bg-[url(/assets/imgs/procurar.png)] bg-cover rounded-sm"  ></button>
        </form>
    
       
        <a href="" class="hover:cursor-pointer"><img src="/assets/imgs/whatsapp.png" class="w-10 h-9"  alt=""></a>
        
    </header>

   <main class="mt-4 flex justify-around">
    <div class="w-3/7 bg-amber-600 mx-auto rounded-xl p-4">
        <h1 class="text-center text-3xl mb-2">Cadastro produto</h1>
        <form action="/cadastro" method="POST" class="formulario-cadastro" >
            <div>
                <label for="nome">Nome do produto</label>
                <input maxlength="50" required type="text" name="nome" id="inpNome">
            </div>
            <div>
                
                <label  for="nome">Valor do produto</label>
                <input  type="text" name="valor" id="inpValor">
            </div>

            <div>
                <label  for="link">Link de afiliado do produto</label>
                <input  type="text" name="linkAfid" id="">
            </div>

            <div>
                <label  for="imagem">Link da imagem do produto</label>
                <input  type="text" name="imagem" id="inpImg">
            </div>

            <fieldset >
                <legend>Categorias</legend>
                <select class="w-full flex flex-wrap" name="categorias" id="categorias" multiple size="10">
       
                <% categoriasParaCadastro.forEach(cat => { %> 
                    <option class="text-xl border-b-1" value=<%= cat %>> <%= cat %> </option>
                <%}); %>
                        
                  
                </select>
            </fieldset>

            <fieldset>
                <legend>Lojas</legend>
                <label for="shopee">shopee</label>
                <input type="radio" name="loja" value="shopee">

                <label for="mercadoLivre">mercado Livre</label>
                <input type="radio" name="loja" value="mercadoLivre">

            </fieldset>

            <button type="submit">enviar</button>
        </form>
    </div>

    <div class="w-3/7  mx-auto rounded-xl p-4">
        <h1 class="text-3xl text-center">previa</h1>
        <div  class="item-previa m-auto">
            <img id="pImg" src="https://pbs.twimg.com/media/GfHiBmSXgAArPfW?format=jpg&name=900x900" alt="">
            <p id="pNome" class="text-center"></p>
            <p id="pValor" class="text-center">valor</p>
        </div>

        <button id="previa" class="text-xl border-2 rounded-lg p-1 mx-auto mt-3 bg-white block">Exibir previa</button>


        <div class="mx-auto  ">
            <h1 class="text-center text-2xl  border-t-1 b-amber-300 mb-4 mt-4 ">criar categoria</h1>
            <form action="/cadastro" method="POST">
                <label for="nomeCat">Nome da categoria</label>
                <input type="text" name="nomeCat" id="" class="bg-white rounded-sm b-black border-2">
                <button type="submit" class="bg-white rounded-sm b-black border-2">enviar</button>
            </form>
        </div>
    </div>
   </main>
    
   <script src="/js/previaCadastro.js"></script>
</body>
</html>